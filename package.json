{
  "name": "@triviumsoftware/pack-it",
  "type": "module",
  "version": "1.6.0",
  "description": "Pack It! is a packager that bundles source code within a standard Node.js project into a zip file.",
  "author": "Tramaine L. Gillus",
  "repository": {
    "type": "git",
    "url": "git@github.com:tgillus/pack-it.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=14.16"
  },
  "bin": {
    "pack-it": "./lib/bin/pack-it"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "/lib"
  ],
  "keywords": [
    "build",
    "build-tool",
    "bundler",
    "package",
    "packager",
    "packaging",
    "zip"
  ],
  "scripts": {
    "barrels": "barrelsby -c barrelsby.json && npm run format",
    "build": "npm run clean && npm test && tsc",
    "clean": "del ./lib ./coverage",
    "format": "prettier . --write",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "prepack": "npm run build",
    "prepare": "husky install",
    "release": "release-it --ci",
    "test": "ava",
    "test:cov": "c8 ava",
    "test:watch": "ava --watch",
    "watch": "tsc -c"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@esbuild-kit/esm-loader": "2.4.1",
    "@release-it/conventional-changelog": "5.0.0",
    "@types/archiver": "5.3.1",
    "@types/lodash": "4.14.182",
    "@types/node": "18.0.6",
    "@typescript-eslint/eslint-plugin": "5.30.7",
    "@typescript-eslint/parser": "5.30.7",
    "ava": "4.3.1",
    "barrelsby": "2.3.4",
    "c8": "7.12.0",
    "del-cli": "5.0.0",
    "eslint": "8.20.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "release-it": "15.1.3",
    "testdouble": "3.16.6",
    "tsx": "3.8.0",
    "typescript": "4.7.4"
  },
  "dependencies": {
    "@sindresorhus/is": "5.2.0",
    "archiver": "5.3.1",
    "chalk": "5.0.1",
    "commander": "9.4.0",
    "cosmiconfig": "7.0.1",
    "del": "7.0.0",
    "execa": "6.1.0",
    "lodash": "4.17.21",
    "pkg-dir": "6.0.1",
    "read-pkg-up": "9.1.0"
  }
}
