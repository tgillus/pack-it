{
  "compilerOptions": {
    "declaration": true,
    "moduleResolution": "node",
    "target": "ES2018",
    "module": "CommonJS",
    "lib": ["ES2018"],
    "sourceMap": true,
    "outDir": "lib",
    "rootDir": "src",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"]
}
